<p id="notice"><%= notice %></p>

<h1>Words DATABASE</h1>
<br><br>
<div class="container-fluid">
  <div class="container">
    <table class="table table-dark rounded">
      <thead>
        <tr>
          <th>ID</th>
          <th>Word</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @words.each do |word| %>
          <tr>
            <td><strong><%= word.id %></strong></td>
            <td><%= word.word %></td>
            <td><%= link_to 'Show', word %></td>
            <td><%= link_to 'Edit', edit_word_path(word) %></td>
            <td><%= link_to 'Destroy', word, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<br>

<div style="text-align: center;">
  <%= link_to 'New Word', new_word_path, class:"btn btn-primary" %>
</div>