<p id="notice"><%= notice %></p>
<div class="text-right mr-3 mt-3 mb-3">
  <%= link_to('Logout', destroy_admin_session_path, method: :delete, class:"btn btn-danger", style:"border: 3px solid white;")%>
</div>
<div class="container-fluid">
  <div class="container">
  <h1 class="display-4 bg-white p-2">RANDOM WORDS DATABASE</h1>
    <table class="table bg-white table-hover text-center">
      <thead class="thead-dark">
        <tr>
          <th>ID</th>
          <th>Word</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @words.each do |word| %>
          <tr>
            <td><strong><%= word.id %></strong></td>
            <td><%= word.word %></td>
            <td><%= link_to 'Show', word %></td>
            <td><%= link_to 'Edit', edit_word_path(word) %></td>
            <td><%= link_to 'Destroy', word, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <br>
    <div class="container pagination justify-content-center" >
      <%= paginate @words, pagination_class: "pagination-sm" %>
    </div>
  </div>
</div>
<br>

<div class="text-center">
  <%= link_to 'New Word', new_word_path, class:"btn btn-primary" %>
</div>